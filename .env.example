# ============================================================================
# Focal Environment Configuration
# ============================================================================
# Copy this file to .env.local and fill in your values
# NEVER commit .env.local to version control
# ============================================================================

# =============
# Database (Neon Postgres)
# =============
DATABASE_URL=postgresql://user:password@host/database?sslmode=require

# =============
# Better-Auth Configuration
# =============
# Generate with: openssl rand -base64 32
BETTER_AUTH_SECRET=your-secret-key-here
BETTER_AUTH_URL=http://localhost:3000

# Optional: Cookie domain for production (e.g., .focal.app)
# COOKIE_DOMAIN=

# =============
# OAuth Providers - Social Login
# =============

# GitHub OAuth
# Create at: https://github.com/settings/developers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Microsoft / Azure AD OAuth (Enterprise SSO ready)
# Create at: https://portal.azure.com/#blade/Microsoft_AAD_RegisteredApps/ApplicationsListBlade
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
# Optional: Set to specific tenant ID for single-tenant apps, or 'common' for multi-tenant
# MICROSOFT_TENANT_ID=common

# =============
# Cloud Provider - Azure
# =============
# For Azure Blob Storage access (SAS token minting)
AZURE_STORAGE_ACCOUNT=
AZURE_STORAGE_KEY=

# =============
# Cloud Provider - AWS (Optional)
# =============
# For S3 access (pre-signed URLs)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============
# Public URLs
# =============
NEXT_PUBLIC_APP_URL=http://localhost:3000

# =============
# Feature Flags (Optional)
# =============
# NEXT_PUBLIC_ENABLE_GOOGLE_AUTH=true
# NEXT_PUBLIC_ENABLE_MICROSOFT_AUTH=true
# NEXT_PUBLIC_ENABLE_GITHUB_AUTH=true
